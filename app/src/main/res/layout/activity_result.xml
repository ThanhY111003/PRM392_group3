<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ RACE RESULTS ðŸ"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Podium Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Top 3 Finishers"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <!-- Podium Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <!-- 2nd Place -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥ˆ"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp"/>

                        <ImageView
                            android:id="@+id/ivSecondPlace"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvSecondPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vá»‹t #2"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#7F8C8D"/>
                    </LinearLayout>

                    <!-- 1st Place (Center, Larger) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥‡"
                            android:textSize="48sp"
                            android:layout_marginBottom="8dp"/>

                        <ImageView
                            android:id="@+id/ivFirstPlace"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvFirstPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vá»‹t #1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#F39C12"/>
                    </LinearLayout>

                    <!-- 3rd Place -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥‰"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp"/>

                        <ImageView
                            android:id="@+id/ivThirdPlace"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvThirdPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vá»‹t #3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#95A5A6"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Betting Statistics Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Your Bets"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:layout_marginBottom="12dp"/>

                <!-- Statistics Table Container -->
                <LinearLayout
                    android:id="@+id/layoutBettingStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Dynamic bet rows will be added here -->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Balance Summary Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Balance Summary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Previous Balance:"
                        android:textSize="16sp"
                        android:textColor="#7F8C8D"/>

                    <TextView
                        android:id="@+id/tvPreviousBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0$"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#34495E"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Bet:"
                        android:textSize="16sp"
                        android:textColor="#7F8C8D"/>

                    <TextView
                        android:id="@+id/tvTotalBet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0$"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E74C3C"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Winnings:"
                        android:textSize="16sp"
                        android:textColor="#7F8C8D"/>

                    <TextView
                        android:id="@+id/tvTotalWinnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0$"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#27AE60"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="New Balance:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"/>

                    <TextView
                        android:id="@+id/tvNewBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0$"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#27AE60"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Message Section -->
        <TextView
            android:id="@+id/tvResultMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‰ Congratulations! You won!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#27AE60"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnRaceAgain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ Race Again"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#3498DB"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnBackToLobby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ  Back to Lobby"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#95A5A6"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
